{
    // Python Path
	"python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

    // Python linter
    "python.linting.enabled": true,
    "python.linting.pylamaEnabled": true,
    "python.linting.mypyEnabled": false,

    // Editor
    "editor.rulers": [79],

    // Hide files
    "files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "cSpell.words": [
        "Cython",
        "dlro",
        "docstrings",
        "doctests",
        "Dunder",
        "fillchar",
        "frozensets",
        "getdefaultencoding",
        "getfilesystemencoding",
        "getnewargs",
        "keepends",
        "maxsplit",
        "ndigits",
        "olle",
        "PCAP",
        "PCEP",
        "PCPP",
        "pypa",
        "Rossum",
        "Sina",
        "subclasscheck",
        "venvs",
        "Vini",
        "xmlcharrefreplace"
    ],
}
